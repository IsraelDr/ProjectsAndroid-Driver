<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="20dp"
    app:cardPreventCornerOverlap="false">


    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/cardview_background"
        android:orientation="vertical"
        android:alpha="0.9"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/myfont"
            android:padding="1dp"
            android:text="אלעד אליהו"
            android:textColor="#e4d000"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/sourcelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="@string/sourcelocation"
            android:textColor="#02541c"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:padding="1dp"
            android:text=" יהושע ברוכי 3 ירולשים"
            android:textColor="#3a3cb4"
            android:textStyle="italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/targetlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:text="@string/targetlocation"
            android:textColor="#02541c"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=" הועד הלאומי 21 ירושלים"
            android:textColor="#3a3cb4"
            android:textStyle="italic"
            android:typeface="serif" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/distanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:text="@string/distancefromlocation"
                android:textColor="#33ff00"
                android:textStyle="bold"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/distanceTxt"
                android:layout_marginRight="7dp"
                android:textColor="#33ff00"
                android:textStyle="bold"
                android:typeface="serif"/>
        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>