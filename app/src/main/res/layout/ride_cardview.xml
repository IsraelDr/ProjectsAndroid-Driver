<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:visibility="visible"
    app:cardBackgroundColor="#44a119"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right
"
            android:padding="1dp"
            android:text="אלעד אליהו"
            android:textColor="#ff5050"
            android:textSize="28sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/sourcelocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/sourcelocation"
            android:textColor="#ffaa00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=" יהושע ברוכי 3 ירולשים"
            android:textColor="#ffaa00"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/targetlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/targetlocation"
            android:textColor="#ffaa00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=" הועד הלאומי 21 ירושלים"
            android:textColor="#ffaa00"
            android:textStyle="italic" />

    </LinearLayout>


</android.support.v7.widget.CardView>