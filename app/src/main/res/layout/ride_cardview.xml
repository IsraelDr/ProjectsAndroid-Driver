<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="20dp"
    app:cardPreventCornerOverlap="false">


    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingBottom="40dp"
        android:background="@drawable/cardview_background">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="1dp"
            android:text="אלעד אליהו"
            android:textColor="#e4d000"
            android:textSize="27sp"
            android:fontFamily="@font/myfont"/>

        <TextView
            android:id="@+id/sourcelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sourcelocation"
            android:textColor="#02541c"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:textSize="16sp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:padding="1dp"
            android:text=" יהושע ברוכי 3 ירולשים"
            android:typeface="serif"
            android:textColor="#3a3cb4"
            android:textStyle="italic"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/targetlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/targetlocation"
            android:typeface="serif"
            android:textColor="#02541c"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" הועד הלאומי 21 ירושלים"
            android:textColor="#3a3cb4"
            android:textStyle="italic"
            android:typeface="serif"
            android:layout_gravity="right"/>

    </LinearLayout>


</android.support.v7.widget.CardView>